{
  "coverageDirectory": "tests-results/coverage",
  "moduleNameMapper": {
    "src/(.*)": "<rootDir>/src/$1",
    "tests/(.*)": "<rootDir>/tests/$1"
  },
  "preset": "ts-jest",
  "reporters": [
    "default",
    [
      "jest-junit",
      {
        "outputDirectory": "tests-results/jest-junit-reports",
        "outputName": "jest-junit-report.xml"
      }
    ]
  ],
  "testEnvironment": "node",
  "testRegex": ".*\\.spec\\.ts$",
  "transform": {
    "\\.ts$": "ts-jest"
  }
}