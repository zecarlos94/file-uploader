{
  "compilerOptions": {
    "baseUrl": "./",
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "module": "CommonJS",
    "outDir": "./dist",
    "strict": true,
    "target": "ES2022",
    "types": [
      "express",
      "jest",
      "node"
    ],
    "typeRoots": ["./src/types", "./node_modules/@types"],
    "paths": {
      "src/*": ["src/*"],
      "tests/*": ["tests/*"],
      "tsoa": ["node_modules/tsoa/dist"]
    },
    "plugins": [
      {
        "transform": "typescript-transform-paths"
      }
    ]
  },
  "exclude": [
    "tests/*"
  ],
  "ts-node": {
    "files": true
  }
}
