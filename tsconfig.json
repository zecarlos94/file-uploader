{
  "compilerOptions": {
    "baseUrl": "./",
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "target": "ES2022",
    "typeRoots": ["./src/types", "./node_modules/@types"],
    "paths": {
      "src/*": ["src/*"],
      "tests/*": ["tests/*"],
      "tsoa": ["node_modules/tsoa/dist"]
    },
    "plugins": [
      {
        "transform": "typescript-transform-paths"
      }
    ]
  },
  "ts-node": {
    "files": true
  }
}
